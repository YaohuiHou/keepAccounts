.nav {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  background-color: #3ebba3;
}
.default {
  line-height: 100rpx;
  text-align: center;
  flex: 1;
  color: #000;
  font-weight: bold;
  font-size: 28rpx;
}
.green {
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  flex: 1;
  font-weight: bold;
  font-size: 28rpx;
}
.show {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
  flex-wrap: wrap;
  align-content: center;
  box-sizing: border-box;
  padding: 40rpx 40rpx;
}
.show .billinfo {
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
}
.show .billinfo .savebtn {
  width: 80%;
  height: 30px;
  color: #3ebba3;
  font-size: 14px;
  line-height: 30px;
  background: transparent;
  border: 1px solid #3ebba3;
  border-radius: 16px;
  margin-top: 80rpx;
}
.show .billinfo .billtitle {
  font-size: 34rpx;
}
.show .billinfo .billtitle:before {
  content: '';
  display: inline-block;
  width: 2px;
  height: 14px;
  background-color: #3ebba3;
  margin-right: 4px;
  vertical-align: middle;
}
.show .billinfo .input {
  margin: 10px;
  border-bottom: 1px solid #eee;
}
.show .billinfo .input:focus {
  outline: #2be4adcc;
  box-shadow: 0px 0px 5px 1px rgba(43, 228, 173, 0.8);
}
.show .billinfo .mylist {
  width: 100%;
  max-height: 360rpx;
  overflow: auto;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  flex-wrap: wrap;
  text-align: center;
}
.show .billinfo .mylist .items {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20vw;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.show .billinfo .mylist .items .itemicon {
  height: 90rpx;
  width: 90rpx;
  line-height: 90rpx;
  background-color: #eee;
  color: #333;
  font-family: dogbooks;
  font-size: 60rpx;
  border-radius: 50%;
}
.show .billinfo .mylist .items .nochange {
  height: 90rpx;
  width: 90rpx;
  line-height: 90rpx;
  background-color: #3ebba3;
  color: #333;
  font-family: dogbooks;
  font-size: 70rpx;
  border-radius: 50%;
}
.show .billinfo .mylist .items .itemname {
  font-size: 28rpx;
  padding-top: 10rpx;
}
.hidden {
  display: none;
}
