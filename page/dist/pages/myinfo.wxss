@import "./../components/wepy-list.wxss";
@import "./../components/panel.wxss";
.user {
  width: 100%;
  background-color: #3ebba3;
}
.user .userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  padding-top: 20px;
}
.user .userinfo .userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  padding: 0 20px;
}
.user .userinfo .userinfo-nickname {
  color: #fff;
}
.user .numinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  margin: 20px;
}
.user .numinfo .num {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-size: 12px;
}
.sharebtn {
  width: 80%;
  height: 30px;
  color: #3ebba3;
  font-size: 14px;
  line-height: 30px;
  background: transparent;
  border: 1px solid #3ebba3;
  border-radius: 16px;
}
